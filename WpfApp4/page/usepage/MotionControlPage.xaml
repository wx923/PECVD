<Page x:Class="WpfApp4.page.usepage.MotionControlPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp4.page.usepage"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:converters="clr-namespace:WpfApp4.Converters"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Unloaded="Page_Unloaded"
      Title="Page1">
    
    <Page.Resources>
        <!-- 定义框架边框样式 -->
        <Style x:Key="BorderStyle1" TargetType="Border">
            <Setter Property="BorderBrush" Value="LightGray"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Margin" Value="5"/>
        </Style>

        <!-- 定义边框样式2 -->
        <Style x:Key="BorderStyle2" TargetType="Border">
            <Setter Property="BorderBrush" Value="DarkGray"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Margin" Value="10"/>
        </Style>

        <!-- 定义边框样式3 -->
        <Style x:Key="BorderStyle3" TargetType="Border">
            <Setter Property="BorderBrush" Value="Blue"/>
            <Setter Property="BorderThickness" Value="3"/>
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="Margin" Value="15"/>
        </Style>

        <!-- 定义顶部导航栏样式 -->
        <Style x:Key="TopNavBarStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource MaterialDesignPaper}"/>
            <Setter Property="BorderBrush" Value="LightGray"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Margin" Value="5"/>
        </Style>

        <!-- 定义按钮样式 -->
        <Style x:Key="TopNavigationButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatButton}">
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderBrush" Value="LightGray"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource MaterialDesignSelection}"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="{DynamicResource MaterialDesignSelection}"/>
                </Trigger>
            </Style.Triggers>
        </Style>


        <!-- 定义选中按钮样式 -->
        <Style x:Key="SelectedButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource MaterialDesignSelection}"/>
            <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 左侧导航栏按钮样式 -->
        <Style x:Key="LeftNavigationButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatButton}">
            <Setter Property="Margin" Value="8"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- 定义字体样式 -->
        <Style x:Key="StatusTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0 4"/>
        </Style>

        <!--文本间隔样式-->
        <Style x:Key="TextMargin" TargetType="TextBlock">
            <Setter Property="Margin" Value="3"></Setter>
        </Style>

        <!-- 添加其他已有的资源 -->
        <converters:BoolToOpenCloseConverter x:Key="BoolToOpenCloseConverter"/>
        <converters:RadioButtonConverter x:Key="RadioButtonConverter"/>
        <converters:BoolToYesNoConverter x:Key="BoolToYesNoConverter"/>
        <converters:BoolToOnOffConverter x:Key="BoolToOnOffConverter"/>
        <converters:BooleanToBackgroundConverter x:Key="BooleanToBackgroundConverter"/>
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="250" ></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <!--上半部分-->
        <Grid Grid.Row="0"  Margin="20,10,20,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150" ></ColumnDefinition>
                <ColumnDefinition Width="450"></ColumnDefinition>
                <ColumnDefinition Width="360"></ColumnDefinition>
                <ColumnDefinition Width="360"></ColumnDefinition>
                <ColumnDefinition Width="150"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <materialDesign:Card Grid.Column="0" Margin="5,5,5,5">
                <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal" Margin="3">
                        <TextBlock Text="进出料门锁1:" FontSize="12" FontWeight="Bold" Margin="0 0 0 1"/>
                        <TextBlock Text="{Binding MotionPlcData.InOutDoor1Lock, Converter={StaticResource BoolToOpenCloseConverter}}" FontSize="12" FontWeight="Bold" Margin="0 0 0 1"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="3">
                        <TextBlock Text="进出料门锁2:" FontSize="12" FontWeight="Bold" Margin="0 0 0 1"/>
                        <TextBlock Text="{Binding MotionPlcData.InOutDoor2Lock, Converter={StaticResource BoolToOpenCloseConverter}}" FontSize="12" FontWeight="Bold" Margin="0 0 0 1"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="3">
                        <TextBlock Text="维修门锁1:" FontSize="12" FontWeight="Bold" Margin="0 0 0 1"/>
                        <TextBlock Text="{Binding MotionPlcData.MaintenanceDoor1Lock, Converter={StaticResource BoolToOpenCloseConverter}}" FontSize="12" FontWeight="Bold" Margin="0 0 0 1"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="3">
                        <TextBlock Text="维修门锁2:" FontSize="12" FontWeight="Bold" Margin="0 0 0 1"/>
                        <TextBlock Text="{Binding MotionPlcData.MaintenanceDoor2Lock, Converter={StaticResource BoolToOpenCloseConverter}}" FontSize="12" FontWeight="Bold" Margin="0 0 0 1"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="3,10,3,3">
                        <Button Command="{Binding ToggleBuzzerCommand}"
                                Style="{StaticResource MaterialDesignFlatDarkBgButton}"
                                Width="140" Height="30"
                                ToolTip="点击关闭蜂鸣器">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="VolumeHigh" Margin="0,0,8,0"/>
                                <TextBlock Text="关闭蜂鸣器"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </materialDesign:Card>
            <materialDesign:Card Grid.Column="1" Padding="5" Margin="8,0,8,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- 左侧桨区卡片 -->
                    <materialDesign:Card Grid.Column="0" Margin="2">
                        <StackPanel>
                            <TextBlock Text="桨区" FontSize="14" FontWeight="Bold" Margin="5" HorizontalAlignment="Center"/>
                            <UniformGrid Columns="3" Margin="5">
                                <!-- 桨区1 -->
                                <Border BorderBrush="Gray" BorderThickness="1" Margin="2" CornerRadius="3" MinWidth="60">
                                    <StackPanel Margin="3">
                                        <TextBlock Text="桨区1" FontWeight="Bold" TextAlignment="Center" Margin="0,0,0,2" FontSize="12"/>
                                        <TextBlock Text="{Binding MotionPlcData.Paddle1BoatNumber}" TextAlignment="Center" Margin="0,1" FontSize="11"/>
                                        <TextBlock Text="{Binding MotionPlcData.Paddle1Time}" TextAlignment="Center" Margin="0,1" FontSize="11"/>
                                        <TextBlock Text="{Binding MotionPlcData.Paddle1Status}" TextAlignment="Center" Margin="0,1" FontSize="11"/>
                                    </StackPanel>
                                </Border>
                                <!-- 其他桨区使用相同的样式 -->
                                <Border BorderBrush="Gray" BorderThickness="1" Margin="2" CornerRadius="3" MinWidth="60">
                                    <StackPanel Margin="3">
                                        <TextBlock Text="桨区2" FontWeight="Bold" TextAlignment="Center" Margin="0,0,0,2" FontSize="12"/>
                                        <TextBlock Text="{Binding MotionPlcData.Paddle2BoatNumber}" TextAlignment="Center" Margin="0,1" FontSize="11"/>
                                        <TextBlock Text="{Binding MotionPlcData.Paddle2Time}" TextAlignment="Center" Margin="0,1" FontSize="11"/>
                                        <TextBlock Text="{Binding MotionPlcData.Paddle2Status}" TextAlignment="Center" Margin="0,1" FontSize="11"/>
                                    </StackPanel>
                                </Border>
                                <Border BorderBrush="Gray" BorderThickness="1" Margin="2" CornerRadius="3" MinWidth="60">
                                    <StackPanel Margin="3">
                                        <TextBlock Text="桨区3" FontWeight="Bold" TextAlignment="Center" Margin="0,0,0,2" FontSize="12"/>
                                        <TextBlock Text="{Binding MotionPlcData.Paddle3BoatNumber}" TextAlignment="Center" Margin="0,1" FontSize="11"/>
                                        <TextBlock Text="{Binding MotionPlcData.Paddle3Time}" TextAlignment="Center" Margin="0,1" FontSize="11"/>
                                        <TextBlock Text="{Binding MotionPlcData.Paddle3Status}" TextAlignment="Center" Margin="0,1" FontSize="11"/>
                                    </StackPanel>
                                </Border>
                                <Border BorderBrush="Gray" BorderThickness="1" Margin="2" CornerRadius="3" MinWidth="60">
                                    <StackPanel Margin="3">
                                        <TextBlock Text="桨区4" FontWeight="Bold" TextAlignment="Center" Margin="0,0,0,2" FontSize="12"/>
                                        <TextBlock Text="{Binding MotionPlcData.Paddle4BoatNumber}" TextAlignment="Center" Margin="0,1" FontSize="11"/>
                                        <TextBlock Text="{Binding MotionPlcData.Paddle4Time}" TextAlignment="Center" Margin="0,1" FontSize="11"/>
                                        <TextBlock Text="{Binding MotionPlcData.Paddle4Status}" TextAlignment="Center" Margin="0,1" FontSize="11"/>
                                    </StackPanel>
                                </Border>
                                <Border BorderBrush="Gray" BorderThickness="1" Margin="2" CornerRadius="3" MinWidth="60">
                                    <StackPanel Margin="3">
                                        <TextBlock Text="桨区5" FontWeight="Bold" TextAlignment="Center" Margin="0,0,0,2" FontSize="12"/>
                                        <TextBlock Text="{Binding MotionPlcData.Paddle5BoatNumber}" TextAlignment="Center" Margin="0,1" FontSize="11"/>
                                        <TextBlock Text="{Binding MotionPlcData.Paddle5Time}" TextAlignment="Center" Margin="0,1" FontSize="11"/>
                                        <TextBlock Text="{Binding MotionPlcData.Paddle5Status}" TextAlignment="Center" Margin="0,1" FontSize="11"/>
                                    </StackPanel>
                                </Border>
                                <Border BorderBrush="Gray" BorderThickness="1" Margin="2" CornerRadius="3" MinWidth="60">
                                    <StackPanel Margin="3">
                                        <TextBlock Text="桨区6" FontWeight="Bold" TextAlignment="Center" Margin="0,0,0,2" FontSize="12"/>
                                        <TextBlock Text="{Binding MotionPlcData.Paddle6BoatNumber}" TextAlignment="Center" Margin="0,1" FontSize="11"/>
                                        <TextBlock Text="{Binding MotionPlcData.Paddle6Time}" TextAlignment="Center" Margin="0,1" FontSize="11"/>
                                        <TextBlock Text="{Binding MotionPlcData.Paddle6Status}" TextAlignment="Center" Margin="0,1" FontSize="11"/>
                                    </StackPanel>
                            </Border>
                            </UniformGrid>
                        </StackPanel>
                    </materialDesign:Card>

                    <!-- 右侧暂存区卡片 -->
                    <materialDesign:Card Grid.Column="1" Margin="2">
                        <StackPanel>
                            <TextBlock Text="暂存区" FontSize="14" FontWeight="Bold" Margin="5" HorizontalAlignment="Center"/>
                            <UniformGrid Columns="3" Margin="5">
                                <!-- 暂存区1 -->
                                <Border BorderBrush="Gray" BorderThickness="1" Margin="2" CornerRadius="3" MinWidth="60">
                                    <StackPanel Margin="3">
                                        <TextBlock Text="暂存区1" FontWeight="Bold" TextAlignment="Center" Margin="0,0,0,2" FontSize="12"/>
                                        <TextBlock Text="{Binding MotionPlcData.Storage1BoatNumber}" TextAlignment="Center" Margin="0,1" FontSize="11"/>
                                        <TextBlock Text="{Binding MotionPlcData.Storage1Time}" TextAlignment="Center" Margin="0,1" FontSize="11"/>
                                        <TextBlock Text="{Binding MotionPlcData.Storage1Status}" TextAlignment="Center" Margin="0,1" FontSize="11"/>
                                    </StackPanel>
                                </Border>
                                <!-- 其他暂存区使用相同的样式 -->
                                <Border BorderBrush="Gray" BorderThickness="1" Margin="2" CornerRadius="3" MinWidth="60">
                                    <StackPanel Margin="3">
                                        <TextBlock Text="暂存区2" FontWeight="Bold" TextAlignment="Center" Margin="0,0,0,2" FontSize="12"/>
                                        <TextBlock Text="{Binding MotionPlcData.Storage2BoatNumber}" TextAlignment="Center" Margin="0,1" FontSize="11"/>
                                        <TextBlock Text="{Binding MotionPlcData.Storage2Time}" TextAlignment="Center" Margin="0,1" FontSize="11"/>
                                        <TextBlock Text="{Binding MotionPlcData.Storage2Status}" TextAlignment="Center" Margin="0,1" FontSize="11"/>
                                    </StackPanel>
                                </Border>
                                <Border BorderBrush="Gray" BorderThickness="1" Margin="2" CornerRadius="3" MinWidth="60">
                                    <StackPanel Margin="3">
                                        <TextBlock Text="暂存区3" FontWeight="Bold" TextAlignment="Center" Margin="0,0,0,2" FontSize="12"/>
                                        <TextBlock Text="{Binding MotionPlcData.Storage3BoatNumber}" TextAlignment="Center" Margin="0,1" FontSize="11"/>
                                        <TextBlock Text="{Binding MotionPlcData.Storage3Time}" TextAlignment="Center" Margin="0,1" FontSize="11"/>
                                        <TextBlock Text="{Binding MotionPlcData.Storage3Status}" TextAlignment="Center" Margin="0,1" FontSize="11"/>
                                    </StackPanel>
                                </Border>
                                <Border BorderBrush="Gray" BorderThickness="1" Margin="2" CornerRadius="3" MinWidth="60">
                                    <StackPanel Margin="3">
                                        <TextBlock Text="暂存区4" FontWeight="Bold" TextAlignment="Center" Margin="0,0,0,2" FontSize="12"/>
                                        <TextBlock Text="{Binding MotionPlcData.Storage4BoatNumber}" TextAlignment="Center" Margin="0,1" FontSize="11"/>
                                        <TextBlock Text="{Binding MotionPlcData.Storage4Time}" TextAlignment="Center" Margin="0,1" FontSize="11"/>
                                        <TextBlock Text="{Binding MotionPlcData.Storage4Status}" TextAlignment="Center" Margin="0,1" FontSize="11"/>
                                    </StackPanel>
                            </Border>
                                <Border BorderBrush="Gray" BorderThickness="1" Margin="2" CornerRadius="3" MinWidth="60">
                                    <StackPanel Margin="3">
                                        <TextBlock Text="暂存区5" FontWeight="Bold" TextAlignment="Center" Margin="0,0,0,2" FontSize="12"/>
                                        <TextBlock Text="{Binding MotionPlcData.Storage5BoatNumber}" TextAlignment="Center" Margin="0,1" FontSize="11"/>
                                        <TextBlock Text="{Binding MotionPlcData.Storage5Time}" TextAlignment="Center" Margin="0,1" FontSize="11"/>
                                        <TextBlock Text="{Binding MotionPlcData.Storage5Status}" TextAlignment="Center" Margin="0,1" FontSize="11"/>
                        </StackPanel>
                            </Border>
                                <Border BorderBrush="Gray" BorderThickness="1" Margin="2" CornerRadius="3" MinWidth="60">
                                    <StackPanel Margin="3">
                                        <TextBlock Text="暂存区6" FontWeight="Bold" TextAlignment="Center" Margin="0,0,0,2" FontSize="12"/>
                                        <TextBlock Text="{Binding MotionPlcData.Storage6BoatNumber}" TextAlignment="Center" Margin="0,1" FontSize="11"/>
                                        <TextBlock Text="{Binding MotionPlcData.Storage6Time}" TextAlignment="Center" Margin="0,1" FontSize="11"/>
                                        <TextBlock Text="{Binding MotionPlcData.Storage6Status}" TextAlignment="Center" Margin="0,1" FontSize="11"/>
                        </StackPanel>
                            </Border>
                            </UniformGrid>
                        </StackPanel>
                    </materialDesign:Card>
                </Grid>
            </materialDesign:Card>
            <materialDesign:Card Grid.Column="2" Margin="5,5,10,5" >
                <StackPanel Orientation="Horizontal" Margin="10">
                    <!-- 源位选择 -->
                    <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="250">
                    <StackPanel Orientation="Vertical" Margin="5">
                            <TextBlock Text="源位选择" FontWeight="Bold" Margin="0,0,0,5"/>
                        <RadioButton Content="小车区" 
                                         Margin="0,2,0,5" 
                                     GroupName="SourcePosition"
                                     IsChecked="{Binding SelectedSourcePosition, Converter={StaticResource RadioButtonConverter}, ConverterParameter=小车区}"/>
                            <RadioButton Content="暂存区1" 
                                         Margin="0,2,0,5" 
                                         GroupName="SourcePosition"
                                         IsChecked="{Binding SelectedSourcePosition, Converter={StaticResource RadioButtonConverter}, ConverterParameter=暂存区1}"/>
                            <RadioButton Content="暂存区2" 
                                         Margin="0,2,0,5" 
                                         GroupName="SourcePosition"
                                         IsChecked="{Binding SelectedSourcePosition, Converter={StaticResource RadioButtonConverter}, ConverterParameter=暂存区2}"/>
                            <RadioButton Content="暂存区3" 
                                         Margin="0,2,0,5" 
                                         GroupName="SourcePosition"
                                         IsChecked="{Binding SelectedSourcePosition, Converter={StaticResource RadioButtonConverter}, ConverterParameter=暂存区3}"/>
                            <RadioButton Content="暂存区4" 
                                         Margin="0,2,0,5" 
                                         GroupName="SourcePosition"
                                         IsChecked="{Binding SelectedSourcePosition, Converter={StaticResource RadioButtonConverter}, ConverterParameter=暂存区4}"/>
                            <RadioButton Content="暂存区5" 
                                         Margin="0,2,0,5" 
                                         GroupName="SourcePosition"
                                         IsChecked="{Binding SelectedSourcePosition, Converter={StaticResource RadioButtonConverter}, ConverterParameter=暂存区5}"/>
                            <RadioButton Content="暂存区6" 
                                         Margin="0,2,0,5" 
                                         GroupName="SourcePosition"
                                         IsChecked="{Binding SelectedSourcePosition, Converter={StaticResource RadioButtonConverter}, ConverterParameter=暂存区6}"/>
                            <RadioButton Content="桨区1" 
                                         Margin="0,2,0,5" 
                                         GroupName="SourcePosition"
                                         IsChecked="{Binding SelectedSourcePosition, Converter={StaticResource RadioButtonConverter}, ConverterParameter=桨区1}"/>
                            <RadioButton Content="桨区2" 
                                         Margin="0,2,0,5" 
                                         GroupName="SourcePosition"
                                         IsChecked="{Binding SelectedSourcePosition, Converter={StaticResource RadioButtonConverter}, ConverterParameter=桨区2}"/>
                            <RadioButton Content="桨区3" 
                                         Margin="0,2,0,5" 
                                         GroupName="SourcePosition"
                                         IsChecked="{Binding SelectedSourcePosition, Converter={StaticResource RadioButtonConverter}, ConverterParameter=桨区3}"/>
                            <RadioButton Content="桨区4" 
                                         Margin="0,2,0,5" 
                                     GroupName="SourcePosition"
                                         IsChecked="{Binding SelectedSourcePosition, Converter={StaticResource RadioButtonConverter}, ConverterParameter=桨区4}"/>
                            <RadioButton Content="桨区5" 
                                         Margin="0,2,0,5" 
                                     GroupName="SourcePosition"
                                         IsChecked="{Binding SelectedSourcePosition, Converter={StaticResource RadioButtonConverter}, ConverterParameter=桨区5}"/>
                            <RadioButton Content="桨区6" 
                                         Margin="0,2,0,5" 
                                     GroupName="SourcePosition"
                                         IsChecked="{Binding SelectedSourcePosition, Converter={StaticResource RadioButtonConverter}, ConverterParameter=桨区6}"/>
                    </StackPanel>
                    </ScrollViewer>
                    
                    <StackPanel Width="100" Margin="10,2,10,5" VerticalAlignment="Center">
                        <Button Content="启动" 
                                Style="{StaticResource MaterialDesignFlatDarkBgButton}"
                                Height="30"
                                Width="80"
                                FontSize="14"
                                Margin="0,2,0,5"
                                Command="{Binding StartCommand}"
                                IsEnabled="{Binding IsAutoModeSelected}"/>
                        <Button Content="暂停" 
                                Style="{StaticResource MaterialDesignFlatDarkBgButton}"
                                Height="30"
                                Width="80"
                                FontSize="14"
                                Margin="0,2,0,5"
                                Command="{Binding PauseCommand}"
                                IsEnabled="{Binding IsAutoModeSelected}"/>
                        <Button Content="恢复" 
                                Style="{StaticResource MaterialDesignFlatDarkBgButton}"
                                Height="30"
                                Width="80"
                                FontSize="14"
                                Margin="0,2,0,5"
                                Command="{Binding ResumeCommand}"
                                IsEnabled="{Binding IsAutoModeSelected}"/>
                        <Button Content="上一步" 
                                Style="{StaticResource MaterialDesignFlatDarkBgButton}"
                                Height="30"
                                Width="80"
                                FontSize="14"
                                Margin="0,2,0,5"
                                Command="{Binding PreviousStepCommand}"
                                IsEnabled="{Binding IsAutoModeSelected}"/>
                        <Button Content="下一步" 
                                Style="{StaticResource MaterialDesignFlatDarkBgButton}"
                                Height="30"
                                Width="80"
                                FontSize="14"
                                Margin="0,2,0,5"
                                Command="{Binding NextStepCommand}"
                                IsEnabled="{Binding IsAutoModeSelected}"/>
                    </StackPanel>
                    
                    <!-- 目标位置选择 -->
                    <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="250">
                    <StackPanel Margin="5">
                            <TextBlock Text="目标位置" FontWeight="Bold" Margin="0,0,0,5"/>
                        <RadioButton Content="小车区" 
                                         Margin="0,2,0,5" 
                                     GroupName="TargetPosition"
                                     IsChecked="{Binding SelectedTargetPosition, Converter={StaticResource RadioButtonConverter}, ConverterParameter=小车区}"/>
                            <RadioButton Content="暂存区1" 
                                         Margin="0,2,0,5" 
                                         GroupName="TargetPosition"
                                         IsChecked="{Binding SelectedTargetPosition, Converter={StaticResource RadioButtonConverter}, ConverterParameter=暂存区1}"/>
                            <RadioButton Content="暂存区2" 
                                         Margin="0,2,0,5" 
                                         GroupName="TargetPosition"
                                         IsChecked="{Binding SelectedTargetPosition, Converter={StaticResource RadioButtonConverter}, ConverterParameter=暂存区2}"/>
                            <RadioButton Content="暂存区3" 
                                         Margin="0,2,0,5" 
                                         GroupName="TargetPosition"
                                         IsChecked="{Binding SelectedTargetPosition, Converter={StaticResource RadioButtonConverter}, ConverterParameter=暂存区3}"/>
                            <RadioButton Content="暂存区4" 
                                         Margin="0,2,0,5" 
                                         GroupName="TargetPosition"
                                         IsChecked="{Binding SelectedTargetPosition, Converter={StaticResource RadioButtonConverter}, ConverterParameter=暂存区4}"/>
                            <RadioButton Content="暂存区5" 
                                         Margin="0,2,0,5" 
                                         GroupName="TargetPosition"
                                         IsChecked="{Binding SelectedTargetPosition, Converter={StaticResource RadioButtonConverter}, ConverterParameter=暂存区5}"/>
                            <RadioButton Content="暂存区6" 
                                         Margin="0,2,0,5" 
                                         GroupName="TargetPosition"
                                         IsChecked="{Binding SelectedTargetPosition, Converter={StaticResource RadioButtonConverter}, ConverterParameter=暂存区6}"/>
                            <RadioButton Content="桨区1" 
                                         Margin="0,2,0,5" 
                                         GroupName="TargetPosition"
                                         IsChecked="{Binding SelectedTargetPosition, Converter={StaticResource RadioButtonConverter}, ConverterParameter=桨区1}"/>
                            <RadioButton Content="桨区2" 
                                         Margin="0,2,0,5" 
                                         GroupName="TargetPosition"
                                         IsChecked="{Binding SelectedTargetPosition, Converter={StaticResource RadioButtonConverter}, ConverterParameter=桨区2}"/>
                            <RadioButton Content="桨区3" 
                                         Margin="0,2,0,5" 
                                         GroupName="TargetPosition"
                                         IsChecked="{Binding SelectedTargetPosition, Converter={StaticResource RadioButtonConverter}, ConverterParameter=桨区3}"/>
                            <RadioButton Content="桨区4" 
                                         Margin="0,2,0,5" 
                                     GroupName="TargetPosition"
                                         IsChecked="{Binding SelectedTargetPosition, Converter={StaticResource RadioButtonConverter}, ConverterParameter=桨区4}"/>
                            <RadioButton Content="桨区5" 
                                         Margin="0,2,0,5" 
                                     GroupName="TargetPosition"
                                         IsChecked="{Binding SelectedTargetPosition, Converter={StaticResource RadioButtonConverter}, ConverterParameter=桨区5}"/>
                            <RadioButton Content="桨区6" 
                                         Margin="0,2,0,5" 
                                     GroupName="TargetPosition"
                                         IsChecked="{Binding SelectedTargetPosition, Converter={StaticResource RadioButtonConverter}, ConverterParameter=桨区6}"/>
                    </StackPanel>
                    </ScrollViewer>
                </StackPanel>
            </materialDesign:Card>
            <materialDesign:Card Grid.Column="3" Margin="8,5,10,5" Background="{DynamicResource PrimaryHueLightBrush}">
                <StackPanel  Orientation="Horizontal" >
                    <StackPanel Orientation="Vertical">
