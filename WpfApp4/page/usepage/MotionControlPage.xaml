                            <TextBox Width="60" Height="25" Text="{Binding ClampInputValue}" Margin="5,0,0,0"/>
                            <TextBlock Text="mm" VerticalAlignment="Center" Margin="5,0,0,0"/>
                            </StackPanel>
                            <Button Style="{StaticResource MaterialDesignFlatMidBgButton}" 
                                    Content="启动" 
                                    Command="{Binding StartClampMotionCommand}"
                                Height="30"
                                Width="80"/>
                </StackPanel>
                </materialDesign:Card>
            </StackPanel>
            <StackPanel Grid.Column="3" Margin="3,3,3,3">
                <TextBlock Text="事件记录" FontSize="14" FontWeight="Bold" Margin="5,5,5,5"/>
                <Border BorderBrush="#FFD0D0D0" 
                        BorderThickness="1" 
                        CornerRadius="3"
                        Height="400"
                        Background="White">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding EventLogs}" Margin="5">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="0,2">
                                        <TextBlock Text="{Binding Time, StringFormat=HH:mm:ss}" 
                                                 Margin="0,0,10,0"
                                                 Foreground="#FF666666"/>
                                        <TextBlock Text="{Binding Message}" 
                                                 TextWrapping="Wrap"
                                                 Foreground="#FF333333"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Border>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
